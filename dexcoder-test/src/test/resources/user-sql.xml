<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//dexcoder.com//DTD Mapper 2.0//EN"
        "http://www.dexcoder.com/dtd/batis-mapper.dtd">
<mapper namespace="User">

    <sql id="columns">
        user_id,login_name,password,user_age,user_type
    </sql>

    <select id="getUser">
        select
        <include refid="columns"/>
        from user

    </select>


    <select id="getUser2">
        select
        <include refid="columns"/>
        from user

        <where>
            <if test="user[0] != null">
                login_name=#{user[0].loginName}
            </if>
        </where>

    </select>

    <select id="getUser3">
        select
        <include refid="columns"/>
        from user
        <where>
            <if test="names != null">
                login_name in
                <foreach collection="names" index="index" item="item" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
        </where>
    </select>

</mapper>